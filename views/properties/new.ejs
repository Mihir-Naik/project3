<h1>New Property</h1>

<form class="property-form" method="post" action="/properties">
    <div class="form-group">
      <label for="exampleFormControlInput1">Apartment Number</label>
      <input type="text" name="aptNumber" class="form-control" id="exampleFormControlInput1" placeholder="152 or W51">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Street Address</label>
        <input type="text" name="street" class="form-control" id="exampleFormControlInput1" placeholder="1520 2nd street">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">City</label>
        <input type="text" name="city" class="form-control" id="exampleFormControlInput1" placeholder="Los Angeles">
    </div>
    <div class="form-group">
          <label for="exampleFormControlInput1">Zip Code</label>
          <input type="text" name="zipCode" class="form-control" id="exampleFormControlInput1" placeholder="90041">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">State</label>
        <input type="text" name="state" class="form-control" id="exampleFormControlInput1" placeholder="CA">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Rent Price</label>
        <input type="text" name="rentalPrice" class="form-control" id="exampleFormControlInput1" placeholder="6000">
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Number of Bathrooms</label>
      <select name="numBedrooms" class="form-control" id="exampleFormControlSelect1">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
      </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Number of Bedrooms</label>
        <select name="numBathrooms" class="form-control" id="exampleFormControlSelect1">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
        </select>
      </div>
      <div class="form-group">
          <label for="exampleFormControlInput1">Square Feet</label>
          <input type="text" name="sizeSquareFeet" class="form-control" id="exampleFormControlInput1" placeholder="300sq">
      </div>
      
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description</label>
      <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value="" checked>
            Vacant
        </label>
      </div>
    <button type="submit">Add Property</button>
  </form>