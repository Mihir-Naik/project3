<h1 style="margin-top: 100px;">My Residents</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Property</th>
      <th>Chat</th>
    </tr>
  </thead>
  <tbody>
    <% if(myResidents.length > 0) { %>
      <% myResidents.forEach(function(resident, index){%>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= resident.firstName %></td>
          <td><%= resident.lastName %></td>
          <td><%= resident.email %></td>
          <td><a href="/properties/<%= resident.residence.id %>"><%= resident.residence.formattedAddress() %></a></td>
          <td>
            <a href="/conversations/<%= conversations[resident.id].id %>" class="chat-icon">
              <span class="fa-stack fa-lg">
                <i class="fa fa-circle fa-stack-2x"></i>
                <i class="fa fa-weixin fa-stack-1x fa-inverse"></i>
              </span>
              
              <% if(!conversations[resident.id].ownerRead) { %>
                <span class="badge badge-danger">New</span>
              <% } %>
            </a>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <h3>You currently have no residents to display</h3>
    <% } %>
  </tbody>
</table>